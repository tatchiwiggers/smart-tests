<%= render 'shared/navbar' %>
<% if current_user.teacher_role? %>
<div class="container">
<div class="row mt-3 mb-5">
  <div class="col-md-3">

<p><h1>Assessments</h1></p>

<%= link_to 'Add a new one', new_questionnaire_path, class: "btn btn-primary" %>

<table class="mt-3">
  <thead>
    <tr>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

           <button class="coffee">
            <a href="https://open.spotify.com/playlist/7nCRh8ivvFmxhVqpD6PqM0?si=08f214d682d24cc3">
              <div>
                <span>
                  <p><i class="fa fa-mug-hot ml-2"></i> Need a coffee break?</p><p>:)</p>
                </span>
              </div>
              <div>
                <span>
                  <h4><i class="fab fa-spotify"></i> Listen our playlist on Spotify</h4>
                </span>
              </div>
            </a>
          </button>

  <tbody>
    <% @quest_user.each do |questionnaire| %>
      <tr>
        <td><%= questionnaire.name %></td>
        <td><%= link_to 'Show', questionnaire, class: "btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_questionnaire_path(questionnaire), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', questionnaire, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
   </tbody>
</table>
<br>
</div>
</div>
</div>
<% else %>
          <h2> STUDENT <h2>
          <div class="container">
      <h1>Welcome to your dashboard, <%= current_user.name %>!</h1>
      <div class="start_btns">
        <a><button><%= link_to 'Start', new_questionnaire_path %></button></a>
      </div>

    <!-- Info Box -->
    <div class="info_box">
        <div class="info-title"><span>Some Rules</span></div>
        <div class="info-list">
            <div class="info">1. You will have only <span>15 seconds</span> per each question.</div>
            <div class="info">2. Once you select your answer, it can't be undone.</div>
            <div class="info">3. You can't select any option once time goes off.</div>
            <div class="info">4. You can't exit from the Quiz while you're playing.</div>
            <div class="info">5. You'll get points on the basis of your correct answers.</div>
        </div>
        <div class="buttons">
            <button class="quit">Exit Quiz</button>
            <button class="restart">Continue</button>
        </div>
    </div>


<% end %>


</div>
